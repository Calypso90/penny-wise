// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String     @id @default(uuid())
  username   String     @unique
  email      String     @unique
  password   String
  expenses   Expense[]
  categories Category[]
  capital    Capital[]
  goals      Goal[]
  budgets    Budget[]
}

model Budget {
  id         String     @id @default(uuid())
  month      Int
  year       Int
  expenses   Expense[]
  capital    Capital[]
  categories Category[]
  goals      Goal[]
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
}

model Expense {
  id          String   @id @default(uuid())
  cost        Int
  name        String
  description String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  String
  createdAt   DateTime @default(now())
  budget      Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  budgetId    String
}

model Capital {
  id          String   @id @default(uuid())
  name        String
  amount      Int
  description String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime @default(now())
  budget      Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  budgetId    String
}

model Category {
  id        String    @id @default(uuid())
  name      String
  limit     Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expenses  Expense[]
  createdAt DateTime  @default(now())
  budget    Budget    @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  budgetId  String
}

model Goal {
  id          String   @id @default(uuid())
  name        String
  cost        Int
  allocated   Int
  description String?
  month       Int
  year        Int
  isActive    Boolean
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime @default(now())
  budget      Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  budgetId    String
}
